<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/bg_round_shape_20"
    android:backgroundTint="#4d000000"
    android:paddingVertical="@dimen/_15sdp"
    android:paddingStart="@dimen/_15sdp"
    android:paddingEnd="@dimen/_5sdp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_oval_shape"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/CircleShape" />


    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:orientation="vertical"
        app:constraint_referenced_ids="tvName,tvDuration"
        app:flow_verticalGap="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivMenu"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvName"
        style="@style/fontSemiBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_22sdp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:minWidth="@dimen/_80sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/tvDuration"
        style="@style/fontNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="start"
        android:minWidth="@dimen/_80sdp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_11ssp" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>